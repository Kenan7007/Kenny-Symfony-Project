{% extends 'base.html.twig' %}


{% block title %}Ranking{% endblock %}
{% block body %}

    <style>

        .table{
            border-radius: 10px;
            box-shadow: 0 4px 16px rgba(0,0,0,.25);
            padding: 16px 20px;
            margin-top: 20px;
        }
    </style>

    {% if authors %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Authors</th>
                <th>Likes</th>
            </tr>
            </thead>
            <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.name }}</td>
                    <td>{{ author.likes }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No Authors To Display</p>
    {% endif %}
{% endblock %}