<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <a class="navbar-brand" href={{ path('kenny') }}>Kenny</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href={{ path('kenny') }}>Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('article_new') }}>Add Article</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('rank') }}>Ranking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('about') }}>About</a>
                    </li>
                </ul>

            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
            {% block javascripts %}
                <!-- Flashy depends on jQuery -->
                <script src="//code.jquery.com/jquery.js"></script>
                <!-- Load Flashy default JavaScript -->
                <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
            {% endblock %}
        {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
    </body>
</html>
